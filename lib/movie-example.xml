<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : movie-example.xml
    Created on : February 6, 2008, 2:36 PM
    Author     : Kai Kousa
    Description:
        This document demonstrates a way to define a movie using xml-markup.
        This xml-file is generated by Fooga from database entries that comprise 
        a timeline containing video, audio and still-picture contents. The xml is
        fed to the MovieBuilder-class, which uses several helper classes to 
        generate a normalized object model of movie. This object model is then 
        given to an instance of MovieRenderer which simply combines the visual 
        elements, mixes the multitrack audio and multiplexes the generated 
        video and audio to a final film.
-->

<movie>
    <name>Squirrels falling asleep</name>
    <format>mp4</format><!-- mp4, MPEG-2, Xvid -->
    <resolution>720x576</resolution><!-- 720x576, 640x480, 320x240 -->
    
    <!-- A visual sequence contains data of the visual elements of the movie
         (video, images).-->
    <visual-sequence>
        <visual type="video" index="1">
            <file>tmp/export/1/scene01.mp4</file>
            <start-point>00:00:00:00</start-point><!-- h:m:s:ms or hours:minutes:seconds:milliseconds -->
            <end-point>00:00:00:00</end-point>
            <place></place>
            <mute>false</mute><!-- true/false -->
            <volume>100</volume><!-- in percentages(%) -->
        </visual>
        <visual type="image" index="2">
            <file>tmp/export/1/streetview.png</file>
            <start-point>00:00:00:00</start-point><!-- h:m:s:ms or hours:minutes:seconds:milliseconds -->
            <end-point>00:00:00:00</end-point>
            <place></place>
            <mute>false</mute><!-- true/false -->
            <volume>100</volume><!-- in percentages(%) -->
        </visual>
    </visual-sequence>
    
    <visual-effects>
        <effect type="crossfade" start-point="00:00:00:00" end-point="00:00:00:00">
            <!-- Parameters depend on the implementation of the effect, refer to documentation
                 to know more about what parameters each effect accepts. -->
            <param name="testParam1">100</param>
            <param name ="testParam2">86</param>
        </effect>
    </visual-effects>
    
    <!-- Audio sequence contains the data that is needed to generate the 
         soundtrack of the movie.-->
    <audio-sequence>
        <audio>
            <file>tmp/export/1/someMusic.mp3</file>
            <volume>100</volume><!-- In percentages(%) -->
            <start-point>00:00:00:00</start-point><!-- h:m:s:ms or hours:minutes:seconds:milliseconds -->
            <end-point>00:00:00:00</end-point><!-- Same as the start-point -->
            <offset>00:00:00:00</offset><!-- h:m:s:ms -->            
        </audio>      
        <audio>
            <file>tmp/export/1/someOtherMusic.mp3</file>
            <volume>100</volume><!-- In percentages(%) -->
            <start-point>00:00:00:00</start-point><!-- h:m:s:ms or hours:minutes:seconds:milliseconds -->
            <end-point>00:00:00:00</end-point><!-- Same as the start-point -->
            <offset>00:00:00:00</offset><!-- h:m:s:ms -->            
        </audio> 
    </audio-sequence>
</movie>
